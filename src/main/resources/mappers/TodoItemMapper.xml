<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.usu1.mapper.TodoItemMapper">

    <select id="selectList" resultType="com.example.usu1.dto.TodoItemDto">
        SELECT * FROM todo_item
    </select>

    <insert id="deleteTodoItem" parameterType="com.example.usu1.dto.TodoItemDto">
        delete
          from todo_item
         where seq = #{seq}
    </insert>

    <insert id="insertTodoItem" parameterType="com.example.usu1.dto.TodoItemDto">
        INSERT INTO todo_item (
              title
            , content
            , is_completed
            , start_dt
            , create_dt
        )
        VALUES (
              #{title}
            , #{content}
            , #{completed}
            , #{startDt}
            , #{createDt}
        )
    </insert>

</mapper>